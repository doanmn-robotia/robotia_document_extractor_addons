    <!-- Table 1.1: Substance Usage -->
    <record id="view_substance_usage_list" model="ir.ui.view">
        <field name="name">substance.usage.list</field>
        <field name="model">substance.usage</field>
        <field name="arch" type="xml">
            <list string="Substance Usage" create="false" edit="false" delete="false">
                <field name="document_id"/>
                <field name="usage_type"/>
                <field name="substance_id"/>
                <field name="year_1_quantity_kg"/>
                <field name="year_1_quantity_co2"/>
                <field name="year_2_quantity_kg"/>
                <field name="year_2_quantity_co2"/>
                <field name="year_3_quantity_kg"/>
                <field name="year_3_quantity_co2"/>
                <field name="avg_quantity_kg"/>
                <field name="avg_quantity_co2"/>
                <field name="notes" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_substance_usage_search" model="ir.ui.view">
        <field name="name">substance.usage.search</field>
        <field name="model">substance.usage</field>
        <field name="arch" type="xml">
            <search string="Search Substance Usage">
                <field name="document_id"/>
                <field name="substance_id"/>
                <field name="substance_name"/>
                <field name="usage_type"/>
                <filter string="Production" name="filter_production"
                        domain="[('usage_type', '=', 'production')]"/>
                <filter string="Import" name="filter_import"
                        domain="[('usage_type', '=', 'import')]"/>
                <filter string="Export" name="filter_export"
                        domain="[('usage_type', '=', 'export')]"/>
                <group expand="0" string="Group By">
                    <filter string="Document" name="group_by_document" context="{'group_by': 'document_id'}"/>
                    <filter string="Usage Type" name="group_by_usage_type" context="{'group_by': 'usage_type'}"/>
                    <filter string="Substance" name="group_by_substance" context="{'group_by': 'substance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_substance_usage" model="ir.actions.act_window">
        <field name="name">Substance Usage</field>
        <field name="res_model">substance.usage</field>
        <field name="view_mode">list</field>
        <field name="domain">[('is_title', '=', False)]</field>
        <field name="context">{'search_default_group_by_usage_type': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No substance usage records found
            </p>
            <p>
                Substance usage data is extracted from Form 01 documents.
            </p>
        </field>
    </record>

