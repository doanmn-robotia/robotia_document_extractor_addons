<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="robotia_document_extractor.ExtractionPageSelector" owl="1">
        <div class="o_extraction_page_selector h-100 d-flex flex-column bg-view">
            <!-- Header -->
            <div class="o_control_panel d-flex flex-column gap-3 px-3 py-2 border-bottom">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="o_control_panel_breadcrumbs d-flex align-items-center">
                        <h1 class="display-6 mb-0">Document Extraction</h1>
                    </div>
                    <div class="o_control_panel_actions d-flex gap-2">
                        <t t-if="state.pages.length > 0">
                            <button class="btn btn-secondary" t-on-click="selectAll" t-att-disabled="state.isProcessing">
                                Select All
                            </button>
                            <button class="btn btn-secondary" t-on-click="deselectAll" t-att-disabled="state.isProcessing">
                                Deselect All
                            </button>
                            <button class="btn btn-primary" t-on-click="onExtract" t-att-disabled="state.isProcessing">
                                <i class="fa fa-cogs me-1"/>
                                <t t-if="state.isProcessing">Extracting...</t>
                                <t t-else="">Extract Selected Pages</t>
                            </button>
                        </t>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="o_content flex-grow-1 overflow-auto p-4">
                <!-- 2/3-Column Layout: Thumbnails + Pages + Progress -->
                <div class="extraction-layout-grid">

                    <!-- Thumbnail Sidebar (Desktop only, mobile horizontal scroll) -->
                    <t t-if="state.pages.length > 0">
                        <div class="thumbnail-sidebar">
                            <div class="thumbnail-list">
                                <t t-foreach="state.pages" t-as="page" t-key="page.attachment_id">
                                    <div class="thumbnail-item"
                                         t-att-class="{
                                             'thumbnail-active': state.activePageId === page.attachment_id,
                                             'thumbnail-selected': state.selectedPages.has(page.attachment_id)
                                         }"
                                         t-att-data-thumbnail-id="page.attachment_id"
                                         t-on-click="(ev) => this.onThumbnailClick(page, ev)">
                                        <div class="thumbnail-preview">
                                            <img t-att-src="page.url"
                                                 t-att-alt="'Page ' + (page.page_num + 1)"
                                                 loading="lazy"/>
                                        </div>
                                        <div class="thumbnail-label">
                                            <t t-esc="page.page_num + 1"/>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>

                    <!-- BLOCK 1: Page Selection (Center) -->
                    <div class="page-selection-block">
                        <!-- PDF Preview (progress_only mode with merged PDF) -->
                        <t t-if="state.isProcessing &amp;&amp; state.mergedPdfUrl &amp;&amp; state.pages.length === 0">
                            <div class="merged-pdf-container">
                                <div class="pdf-header">
                                    <strong>File đang xử lý</strong>
                                </div>
                                <iframe t-att-src="state.mergedPdfUrl"
                                        class="merged-pdf-iframe"
                                        title="Merged PDF Preview">
                                </iframe>
                            </div>
                        </t>

                        <!-- Processing Indicator (fallback when no PDF URL) -->
                        <t t-if="state.isProcessing &amp;&amp; !state.mergedPdfUrl &amp;&amp; state.pages.length === 0">
                            <ExtractionSkeleton showStepper="false"/>
                        </t>

                        <!-- Page Selection - Vertical Stack (like PDF viewer) -->
                        <t t-if="state.pages.length > 0">
                            <div class="pages-vertical-stack">
                                <t t-foreach="state.pages" t-as="page" t-key="page.attachment_id">
                                    <div class="page-stack-item"
                                         t-att-class="{
                                             'page-selected': state.selectedPages.has(page.attachment_id),
                                             'page-disabled': state.isProcessing
                                         }"
                                         t-att-data-page-id="page.attachment_id"
                                         t-on-click="() => !state.isProcessing &amp;&amp; this.togglePage(page.attachment_id)"
                                         t-on-dblclick="() => this.onPageDoubleClick(page)">

                                        <!-- Page Header -->
                                        <div class="page-stack-header">
                                            <span class="page-number">Page <t t-esc="page.page_num + 1"/></span>
                                            <div class="form-check m-0">
                                                <input class="form-check-input" type="checkbox"
                                                       t-att-checked="state.selectedPages.has(page.attachment_id)"
                                                       t-att-disabled="state.isProcessing"
                                                       style="pointer-events: none;"/>
                                            </div>
                                        </div>

                                        <!-- Page Preview Image (Full Width) -->
                                        <div class="page-stack-preview">
                                            <img t-att-src="page.url"
                                                 t-att-alt="'Page ' + (page.page_num + 1)"
                                                 loading="lazy"/>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>

                    <!-- BLOCK 2: Progress Sidebar (Right / Top on mobile) -->
                    <t t-if="state.isProcessing and state.jobUUID">
                        <div class="progress-sidebar">
                            <div class="progress-sidebar-content">
                                <!-- Progress Header -->
                                <div class="progress-header">
                                    <h5 class="mb-0">Extraction Progress</h5>
                                    <span class="badge bg-primary"><t t-esc="state.progress"/>%</span>
                                </div>

                                <!-- Vertical Stepper -->
                                <div class="extraction-stepper-vertical">
                                    <t t-set="steps" t-value="getStepConfig()"/>
                                    <t t-set="currentStepIndex" t-value="steps.findIndex(s => s.key === state.currentStep)"/>

                                    <t t-foreach="steps" t-as="step" t-key="step.key">
                                        <t t-set="stepIndex" t-value="step_index"/>
                                        <t t-set="isCompleted" t-value="stepIndex &lt; currentStepIndex"/>
                                        <t t-set="isActive" t-value="stepIndex === currentStepIndex"/>
                                        <t t-set="isPending" t-value="stepIndex &gt; currentStepIndex"/>

                                        <div class="stepper-vertical-item"
                                             t-att-class="{
                                                 'completed': isCompleted,
                                                 'active': isActive,
                                                 'pending': isPending
                                             }">
                                            <div class="stepper-vertical-dot"></div>
                                            <div class="stepper-vertical-content">
                                                <div class="stepper-vertical-label"><t t-esc="step.label"/></div>
                                            </div>
                                        </div>
                                    </t>
                                </div>

                                <!-- Progress Message -->
                                <div class="progress-message">
                                    <t t-esc="state.progressMessage"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
            </div>

            <!-- Image Preview Modal -->
            <t t-if="state.previewUrl">
                <div class="modal d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5); z-index: 1050;">
                    <div class="modal-dialog modal-lg modal-dialog-centered" role="document" style="max-width: 90vw;">
                        <div class="modal-content h-100">
                            <div class="modal-header py-2">
                                <h5 class="modal-title">Preview</h5>
                                <button type="button" class="btn-close" t-on-click="closePreview"></button>
                            </div>
                            <div class="modal-body p-0 d-flex align-items-center justify-content-center bg-dark" style="height: 80vh;">
                                <img t-att-src="state.previewUrl" class="img-fluid" style="max-height: 100%; max-width: 100%; object-fit: contain;"/>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>
