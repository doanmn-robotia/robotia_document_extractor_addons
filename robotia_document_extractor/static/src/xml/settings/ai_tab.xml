<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="robotia_document_extractor.SettingsAITab">
        <div class="ai-tab">
            <div class="row justify-content-center">
                <div class="col">
                    <!-- Info Card -->
                    <div class="alert alert-light d-flex align-items-center mb-4">
                        <i class="fa fa-info-circle fa-2x me-3"/>
                        <div>
                            <h5 class="alert-heading mb-1">AI Configuration</h5>
                            <p class="mb-0">Configure Gemini API settings for document extraction and AI assistant features.</p>
                        </div>
                    </div>

                    <!-- Configuration Card -->
                    <div class="card">
                        <div class="card-body text-center py-5">
                            <i class="fa fa-magic fa-4x text-primary mb-3"/>
                            <h4 class="mb-3">AI Settings</h4>
                            <p class="text-muted mb-4">
                                Manage your Gemini API key, model selection, and system prompts through the settings panel.
                            </p>
                            <button class="btn btn-primary btn-lg" t-on-click="openAISettings">
                                <i class="fa fa-cog me-2"/>
                                Open AI Settings
                            </button>
                        </div>
                    </div>

                    <!-- Features List -->
                    <div class="mt-4">
                        <h6 class="text-muted mb-3">AI Features:</h6>
                        <ul class="list-group">
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fa fa-check-circle text-success me-3"/>
                                <div>
                                    <strong>Document Extraction</strong>
                                    <p class="mb-0 small text-muted">Extract structured data from Vietnamese regulatory forms</p>
                                </div>
                            </li>
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fa fa-check-circle text-success me-3"/>
                                <div>
                                    <strong>AI Chat Assistant</strong>
                                    <p class="mb-0 small text-muted">Interactive chatbot for data queries and insights</p>
                                </div>
                            </li>
                            <li class="list-group-item d-flex align-items-center">
                                <i class="fa fa-check-circle text-success me-3"/>
                                <div>
                                    <strong>Batch Processing</strong>
                                    <p class="mb-0 small text-muted">Process multiple documents from Google Drive</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
