<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="robotia_document_extractor.SettingsAITab">
        <div class="ai-tab-container">
            <t t-if="state.loading">
                <div class="d-flex justify-content-center p-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </t>

            <t t-else="">
                <!-- Render Settings Form using View component -->
                <t t-if="state.viewId">
                    <View t-props="viewProps"/>
                </t>
                <t t-else="">
                    <div class="alert alert-warning">
                        <i class="fa fa-exclamation-triangle"/> Settings form not found. Please check view configuration.
                    </div>
                </t>
            </t>
        </div>
    </t>
</templates>
