<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="robotia_document_extractor.SettingsPermissionsTab">
        <div class="permissions-tab">
            <!-- Loading State -->
            <div t-if="state.loading" class="text-center py-5">
                <i class="fa fa-spinner fa-spin fa-3x text-primary"/>
                <p class="mt-3">Loading permissions...</p>
            </div>

            <!-- Content -->
            <div t-else="">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h4>Role-Based Access Control</h4>
                        <p class="text-muted mb-0">Manage permissions for Document Extractor roles</p>
                    </div>
                    <button class="btn btn-primary" t-on-click="openGroupsSettings">
                        <i class="fa fa-cog me-2"/>Manage in Settings
                    </button>
                </div>

                <!-- Groups Cards -->
                <div class="row g-3">
                    <t t-foreach="state.groups" t-as="group" t-key="group.id">
                        <div class="col-md-6">
                            <div class="card h-100" t-on-click="() => this.openGroupForm(group.id)">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fa fa-shield me-2 text-primary"/>
                                        <t t-esc="group.name"/>
                                    </h5>
                                    <p class="card-text text-muted small" t-esc="group.comment || 'No description'"/>

                                    <div class="mt-3">
                                        <h6 class="small fw-bold text-muted">Access Rights:</h6>
                                        <t t-set="accessRights" t-value="getAccessRightsForGroup(group.id)"/>
                                        <div t-if="accessRights.length > 0" class="small">
                                            <div t-foreach="accessRights.slice(0, 3)" t-as="access" t-key="access.id" class="mb-1">
                                                <i class="fa fa-check text-success me-2"/>
                                                <t t-esc="access.model_id[1]"/>
                                            </div>
                                            <div t-if="accessRights.length > 3" class="text-muted">
                                                + <t t-esc="accessRights.length - 3"/> more...
                                            </div>
                                        </div>
                                        <div t-else="" class="text-muted small">
                                            No specific access rights defined
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <!-- Empty State -->
                <div t-if="state.groups.length === 0" class="text-center py-5">
                    <i class="fa fa-shield fa-4x text-muted mb-3"/>
                    <p class="text-muted">No groups found</p>
                </div>
            </div>
        </div>
    </t>
</templates>
