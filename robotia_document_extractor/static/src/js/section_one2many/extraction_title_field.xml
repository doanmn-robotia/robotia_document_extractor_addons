<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="robotia_document_extractor.ExtractionTitleField" t-inherit="web.CharField">
        <!-- Replace the else block to add external link button -->
        <xpath expr="//t[@t-else='']" position="replace">
            <t t-if="this.props.record.fields[this.props.name].type == 'many2one'">
                <Many2OneField record="this.props.record" readonly="this.props.readonly" name="this.props.name" canQuickCreate="false" canCreateEdit="false" canCreate="this.props.canCreate"/>
            </t>
            <t t-else="">
                <CharField record="this.props.record" readonly="this.props.readonly" name="this.props.name"/>
            </t>
        </xpath>

        <!-- Add pencil icon for title rows -->
        <xpath expr="//span[@t-esc='formattedValue']" position="after">
            <t t-if="props.record.data.is_title">
                <i class="fa fa-fw o_button_icon fa-pencil"/>
            </t>
        </xpath>
    </t>

</templates>
