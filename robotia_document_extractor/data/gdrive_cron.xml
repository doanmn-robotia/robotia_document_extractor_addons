<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job 1: Fetch new files from Google Drive -->
        <record id="ir_cron_gdrive_fetch_files" model="ir.cron">
            <field name="name">Document Extractor: Fetch Files from Google Drive</field>
            <field name="model_id" ref="model_gdrive_service"/>
            <field name="state">code</field>
            <field name="code">model.fetch_new_files()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

        <!-- Cron Job 2: Process pending OCR -->
        <record id="ir_cron_gdrive_process_ocr" model="ir.cron">
            <field name="name">Document Extractor: Process Pending OCR</field>
            <field name="model_id" ref="model_gdrive_service"/>
            <field name="state">code</field>
            <field name="code">model.process_pending_ocr()</field>
            <field name="interval_number">30</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="False"/>
            <field name="doall" eval="False"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>

    </data>
</odoo>
